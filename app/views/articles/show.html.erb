<h2><%= @article.title %></h2>
<p><%= @article.text %></p>
<h4>Comments:</h4>
<div>
  <% @art_comm.each do |comm| %>
  <p><b><%=comm.author%>:</b>&nbsp;<%=comm.body%></p>
  <%end%>
</div>
<hr />
<%= form_for ([@article,@article.comments.build]) do |f| %>

  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>

  <p>
  <%= f.label :body %><br />
  <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>