<h1>List of articles:</h1>
<% @articles.each do |artcl| %>
  <h2><%= artcl.title %></h2>
  <p><%= artcl.text %></p>
  <p><%= link_to 'Show!', article_path(artcl) %></p>
  <p><%= link_to 'Edit', edit_article_path(artcl) %></p>
  <p><%= link_to 'Delete', article_path(artcl), :confirm => "Are you sure?", :method => :delete %></p>
<% end %>