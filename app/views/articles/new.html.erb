<h1>New article</h1>

<%= form_for :article, url: articles_path do |f| %>
  
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :text %><br />
  <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>